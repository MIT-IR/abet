<p>
<%= @departments.name %>
</p>

<table>
	<tr>
		<th>Course Name</th>
		<th>Course Number</th>
		<th>Abet Accredited</th>
		<th>Show Outcomes</th>
	</tr>

	<% @courses.each do |course| %>
		<tr>
			<td><%= course.name %></td>
			<td><%= course.number %></td>
			<td><%= course.abet_accredited %></td>
			<td><%=link_to("Show Outcomes", {:controller => 'courses', :action => 'show', :id => course.id}, :class => 'action show') %></td>
		</tr>
	<% end %>	

</table>


