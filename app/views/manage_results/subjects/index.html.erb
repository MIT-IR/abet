<% tab(TabHelper::DATA_ENTRY) %>

<h1><%= t(".heading") %></h1>

<% if policy(:generic).create_assessments? %>
  <p><%= t(
    ".description.can_create_assessments_html",
    add_assessment_link: link_to(
      t(".add_assessment"),
      manage_assessments_root_path
    )
  ) %></p>
<% else %>
  <p><%= t(".description.cannot_create_assessments_html") %></p>
<% end %>

<ul class="subjects">
  <% @subjects.each do |subject| %>
    <li><%= link_to subject, manage_results_subject_path(subject) %></li>
  <% end %>
</ul>
