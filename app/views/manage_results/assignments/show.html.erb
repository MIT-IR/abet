<% tab(TabHelper::DATA_ENTRY) %>

<section class="headline-with-actions">
  <h1><%= @assignment.name %></h1>

  <% if policy(@assignment).create_results? %>
    <%= link_to t(".back-to-course", course: @assignment.course.name),
      manage_assignments_course_path(@assignment.course),
      class: "back-to-course" %>
    <%= link_to t(".add_result"),
      new_manage_results_assignment_result_path(@assignment),
      class: "button" %>
  <% end %>

</section>

<%= render "manage_results/results/assignment_details", assignment: @assignment %>

<section>
  <h2><%= t(".results") %></h2>

  <%= render "results", results: @assignment.results %>
</section>

<section>
  <h2><%= t(".outcomes") %></h2>

  <%= render "manage_results/outcomes", outcomes: [@assignment.outcome] %>
</section>
