<%= render_errors(f) %>

<fieldset class="period" data-role="histogramable">
  <legend><%= t(".period") %></legend>
  <%= f.input :year, collection: Result::YEARS %>
  <%= f.input :semester, collection: Result::SEMESTERS %>
</fieldset>

<fieldset class="background">
  <legend><%= t(".assessment_background") %></legend>
  <%= f.input :assessment_name %>
  <%= f.input :assessment_description %>
  <%= f.input :problem_description %>
</fieldset>

<%= f.input :percentage %>

<div class="form-actions">
  <%= f.submit %>
  <%= cancel_button %>
</div>
