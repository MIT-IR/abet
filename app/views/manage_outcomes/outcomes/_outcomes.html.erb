<table>
  <thead>
    <tr>
      <th><%= t(".outcome") %></th>
      <th><%= t(".assessments_count") %></th>
      <th><%= t(".actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% course.outcomes.order(:name).each do |outcome| %>
      <tr>
        <td><%= outcome %></td>
        <td><%= outcome.assessments_count %></td>
        <td><%= link_to t(".edit_outcome"), edit_manage_outcomes_outcome_path(outcome) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if course.has_custom_outcomes? && policy(course).create_outcomes? %>
  <%= link_to t(".add_outcome"), new_manage_outcomes_course_outcome_path(course), class: "button" %>
<% end %>
