<h3><%= @outcome.name %>: <%= @outcome.description %></h3>
<% if @outcome.alignments.any? %>
  <h4>Aligned ABET Outcomes</h4>
  <table width="1000" id="alignments">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th width="150">Alignment Level</th>
    </tr>
    <% @outcome.alignments.each do |alignment| %>
      <tr>
        <td><%= alignment.standard_outcome.name %></td>
        <td><%= alignment.standard_outcome.description %></td>
        <td><%= alignment.level %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<h4>Direct Assessments</h4>
<% if @direct_assessments.any? %>
  <table id="direct_assessments">
    <tr>
      <th>Subject</th>
      <th>Assignment Name</th>
      <th>Assignment Description</th>
      <th>Minimum Grade</th>
      <th>Target Percentage</th>
      <th></th>
      <th></th>
    </tr>
    <% @direct_assessments.each do |assessment| %>
      <tr id="direct_assessment-<%=assessment.id %>">
        <td><%= assessment.subject %></td>
        <td><%= assessment.name %></td>
        <td><%= assessment.description %></td>
        <td><%= assessment.minimum_requirement %></td>
        <td><%= assessment.target_percentage %></td>
        <td><%= link_to "Edit", edit_direct_assessment_path(assessment) %>
        <td><%= link_to "View and add results", direct_assessment_path(assessment) %>
      </tr>
    <% end %>
  </table>
<% else %>
  <p><em>No direct assessments</em></p>
<% end %>

<h4>Indirect Assessments</h4>
<% if @indirect_assessments.any? %>
  <table id="indirect_assessments">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Minimum Category</th>
      <th>Target Percentage</th>
      <th>Type</th>
      <th></th>
      <th></th>
    </tr>
    <% @indirect_assessments.each do |assessment| %>
      <tr id="indirect_assessment-<%=assessment.id %>">
        <td><%= assessment.name %></td>
        <td><%= assessment.description %></td>
        <td><%= assessment.minimum_requirement %></td>
        <td><%= assessment.target_percentage %></td>
        <td><%= assessment_type(assessment) %></td>
        <td><%= link_to "Edit", edit_indirect_assessment_path(assessment) %></td>
        <td><%= link_to "View and add results", indirect_assessment_path(assessment) %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p><em>No indirect assessments</em></p>
<% end %>
