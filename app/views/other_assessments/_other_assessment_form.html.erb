<h1><%= t(".heading") %></h1>

<%= outcome_details(outcome || assessment.outcomes.first) %>
<%= simple_form_for [outcome, assessment] do |f| %>
  <%= render_errors(f) %>
  <%= f.input :type, as: :hidden, value: "OtherAssessment" %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :minimum_requirement %>
  <%= f.input :target_percentage %>

  <div class="form-actions">
    <%= f.submit %>
    <%= cancel_button %>
  </div>
<% end %>
