<% if results.present? %>
  <table>
    <thead>
      <tr>
        <th><%= t(".name") %></th>
        <th><%= t(".description") %></th>
        <th><%= t(".year") %></th>
        <th><%= t(".semester") %></th>
        <th><%= t(".percentage") %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @assessment.results.each do |result| %>
        <%= content_tag_for :tr, result do %>
          <td><%= result.assessment_name %></td>
          <td><%= result.assessment_description %></td>
          <td><%= result.year %></td>
          <td><%= result.semester %></td>
          <td><%= "#{result.percentage}%" %></td>
          <td>
            <% if policy(result).update? %>
              <%= link_to t(".edit"), edit_result_path(result) %>
            <% end %>
          </td>

          <td>
            <% if policy(result).destroy? %>
              <%= link_to t(".delete"),
                result_path(result),
                method: :delete,
                data: { confirm: t(".confirm") } %>
            <% end %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end%>
