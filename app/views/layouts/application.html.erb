<!DOCTYPE html>
<html lang="en">
  <%= render "layouts/head" %>

  <body class="<%= body_class %>">
    <%= render "navigation" %>

    <% if @current_tab %>
      <%= render "tabs" %>
    <% end %>

    <% if content_for?(:full_bleed) %>
      <%= yield :full_bleed %>
    <% end %>

    <section class="container" role="main">
      <%= render "flashes" %>
      <%= yield %>
    </section>
  </body>
</html>
